# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars

# Brawl Stars API Configuration
# ⚠️ IMPORTANT: Generate a NEW key WITHOUT IP restrictions at https://developer.brawlstars.com
# Leave the IP field EMPTY or set to 0.0.0.0/0 when creating the key
BRAWL_API_KEY=your-brawl-stars-api-key-without-ip-restriction

# OpenRouter API Key (get from https://openrouter.ai)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key

# CORS Allowed Origins (comma-separated for multiple)
# Add your Jelastic domain here: https://env-xxxxx.jelastic.infomaniak.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Database Configuration (Docker Compose will use these defaults)
DATABASE_URL=postgresql+asyncpg://brawl_user:brawl_password@postgres:5432/brawlgpt_db

# Redis Configuration (Docker Compose will use these defaults)
REDIS_URL=redis://redis:6379/0
REDIS_ENABLED=true

# Logging
LOG_LEVEL=INFO
DEBUG=false

# Rate Limiting (requests per minute)
RATE_LIMIT_PLAYER=60/minute
RATE_LIMIT_CHAT=20/minute
RATE_LIMIT_CACHE=30/minute

# Meta Collection Settings
ENABLE_META_CRAWLER=true
META_COLLECTION_INTERVAL_HOURS=6
META_MAX_PLAYERS_PER_RANGE=50

# Global Meta Intelligence Settings
ENABLE_GLOBAL_META_AGGREGATION=true
GLOBAL_META_INTERVAL_MINUTES=60
ENABLE_SYNERGY_ANALYSIS=true
SYNERGY_ANALYSIS_INTERVAL_HOURS=12
ENABLE_TREND_DETECTION=true
TREND_DETECTION_INTERVAL_HOURS=24
AI_MIN_CONFIDENCE_THRESHOLD=0.7
